---
import { SEO } from "astro-seo";
import { HeadHrefLangs } from "astro-i18next/components";
import { localizePath } from "astro-i18next";
import i18next, { t } from "i18next";
import Navigation from "./navigation.astro";
import Language from "./language.astro"
import '../styles/default.sass';
import config from '@content/configuration.json';

let { phone, address } = config;
const locale = /^\/en\//.test(Astro.url.pathname)
    ? "en" : /^\/kk\//.test(Astro.url.pathname) ? "kk" : "ru";
i18next.changeLanguage(locale);
const title = Astro.props.title
    ? t("title-prefix") + ": " + Astro.props.title
    : t("title");
---
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <title>{ title }</title>
    <SEO
      title={ title }
      description={ Astro.props.description || t("description") }
      extend={{
          meta: [
            {
                name: "keywords",
                content: Astro.props.keywords?.join(", ")
            }
          ]
      }} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
  </head>
  <body class={Astro.props.class}>
    <slot name="hero">
      { Astro.props.class === "frontpage"
          ?
            <div id="logo">
              <img src="/img/logo.svg" />
            </div>
            <div style="float: right; margin: 0 1em 1em 1em">
            <Language />
            </div>
          : <Navigation />
      }

    </slot>
    <main class="container">
        { (Astro.props.class === "frontpage")
            ?
            <section class="columns has-text-centered">
              <a class="column" href="about.html">
                <img src="/img/congregation.jpg" /><br /><br />
                <span class="button">{t("menu.about")}</span>
              </a>
              <a class="column" href="location.html">
                <img src="/img/service.jpg" /><br /><br />
                <span class="button">{t("menu.location")}</span>
              </a>
              <a class="column" href="sermons.html">
                <img src="/img/pastor.jpg" /><br /><br />
                <span class="button">{t("menu.sermons")}</span>
              </a>
            </section>
            : ""
        }
        <section class="content">
          <slot />
        </section>
        </main>
    <footer>
        <slot name="footer">
            <section class="container has-text-centered">
                  <small>"Если будем говорить правду с любовью, то будем расти, во всём приближаясь к Нему." (Ефесянам 4:15)</small>
            </section>
        </slot>
    </footer>
  </body>
</html>

<style>
#lang {
  font-size: 1.6em;
}
</style>
