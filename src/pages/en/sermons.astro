---
import DefaultLayout from "@layouts/default.astro";
import Content, {frontmatter} from "@content/en/sermons.mdx";
import LoadVideos from "@components/youtube-data.mjs";
import YoutubeGrid from "@components/youtube-grid.svelte";
import config from '@content/configuration.json';

const feed = await LoadVideos(config.YoutubeChannel)
---
<DefaultLayout
    title={frontmatter?.title}
    description={frontmatter?.description}
    class={frontmatter?.class}
>
    <Content />
    <YoutubeGrid videoFeed={feed} />
</DefaultLayout>
